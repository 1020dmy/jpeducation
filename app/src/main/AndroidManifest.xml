<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jianpei.jpeducation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity android:name=".activitys.pdf.PdfReaderActivity"></activity>
        <activity android:name=".activitys.mine.UserInfoActivity" />
        <activity android:name=".activitys.SelectDisciplineActivity" />
        <activity android:name=".activitys.ClassInfoActivity" />
        <activity android:name=".activitys.login.LoginActivity" />
        <activity android:name=".activitys.launcher.GuideActivity" />
        <activity
            android:name=".activitys.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTask" />
        <activity
            android:name=".activitys.launcher.LauncherActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:taskAffinity="net.sourceforge.simcpux"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="design_width_in_px"
            android:value="1080" />
        <meta-data
            android:name="design_height_in_px"
            android:value="1920" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.jianpei.jpeducation.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>