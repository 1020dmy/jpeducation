<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="@dimen/m_dp_40"
    android:paddingTop="@dimen/m_dp_40"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示"
        android:textColor="@color/c161820"
        android:textSize="@dimen/dp_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_dp_15"
        android:text="您确定取消订单吗？"
        android:textColor="@color/c161820"
        android:textSize="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_dp_40">

        <Button
            android:id="@+id/btn_submit"
            style="@style/login_button"
            android:layout_width="99dp"
            android:text="确定" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/login_button"
            android:layout_width="99dp"
            android:layout_marginLeft="@dimen/m_dp_18"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>