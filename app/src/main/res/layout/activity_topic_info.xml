<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activitys.school.TopicInfoActivity">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topic_info_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topic_info_bg"
        android:padding="10dp"
        android:text="#话题：建培常伴你左右；成就大神梦！"
        android:textColor="@color/white"
        android:textSize="@dimen/s_dp_15" />

    <TextView
        android:id="@+id/tv_read_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topic_info_bg"
        android:gravity="right"
        android:padding="10dp"
        android:text="阅读量：5.8W"
        android:textColor="@color/white"
        android:textSize="@dimen/s_dp_11" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/white"
            app:tabIndicator="@drawable/tab_indictor_bg"
            app:tabIndicatorColor="@color/cE73B30"
            app:tabSelectedTextColor="@color/cE73B30"
            app:tabTextColor="@color/c161820" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>