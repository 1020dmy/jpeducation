<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    android:background="@drawable/shadow_home_item_bg"
    android:orientation="vertical"
    android:padding="13dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textColor="@color/c161820"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="202007202312158"
            android:textColor="@color/c161820"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textColor="@color/c888B96"
            android:textSize="@dimen/dp_12" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_icon_demo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="2020二级建造师无忧取证班二级建 造师无忧取证班"
                android:textColor="@color/c161820"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_classinfo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="市政工程+三门公共科目"
                android:textColor="@color/c888B96"
                android:textSize="11dp" />


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1325"
                android:textColor="@color/cFF0000"
                android:textSize="13dp" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">


        <TextView
            android:id="@+id/tv_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共2件"
            android:textColor="@color/c999999"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="小计："
            android:textColor="@color/c333333"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥2650"
            android:textColor="@color/cD81E06"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="65dp"
            android:layout_height="22dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/shape_selectzhuanye_itemt"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/cFF0000"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="65dp"
            android:layout_height="22dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/shape_group_join"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="65dp"
            android:layout_height="22dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/shape_selectzhuanye_itemt"
            android:gravity="center"
            android:text="去评价"
            android:textColor="@color/cFF0000"
            android:textSize="@dimen/dp_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_student"
            android:layout_width="65dp"
            android:layout_height="22dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/shape_group_join"
            android:gravity="center"
            android:text="去学习"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="65dp"
            android:layout_height="22dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/shape_group_join"
            android:gravity="center"
            android:text="去分享"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>