<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:maxLength="15"
        android:textColor="@color/c161820"
        android:textSize="@dimen/s_dp_14" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/tv_enter"
        android:background="@color/transparents"
        android:src="@drawable/answer_favorites" />


    <TextView
        android:id="@+id/tv_enter"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_selectzhuanye_itemt"
        android:gravity="center"
        android:text="进入"
        android:textColor="@color/cE73B30"
        android:textSize="@dimen/s_dp_14" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ce9e9e9" />

</RelativeLayout>