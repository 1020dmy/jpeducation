<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.tiku.AnswerResultActivity">

    <include layout="@layout/base_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="练习名称："
                    android:textColor="@color/c161820"
                    android:textSize="@dimen/s_dp_14" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建设工程项目管理"
                    android:textColor="@color/c161820"
                    android:textSize="@dimen/s_dp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="22dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/answer_result_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="得分"
                        android:textColor="@color/c0A0C14"
                        android:textSize="@dimen/s_dp_13" />

                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="44"
                        android:textColor="@color/cE73B30"
                        android:textSize="@dimen/s_dp_44" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_correct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/c161820"
                        android:textSize="@dimen/s_dp_13" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_answer_card_one" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正确"
                        android:textColor="@color/c0A0C14"
                        android:textSize="@dimen/s_dp_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/c161820"
                        android:textSize="@dimen/s_dp_13" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_answer_card_two" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="错误"
                        android:textColor="@color/c0A0C14"
                        android:textSize="@dimen/s_dp_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_notDone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/c161820"
                        android:textSize="@dimen/s_dp_13" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_answer_card_three" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未做"
                        android:textColor="@color/c0A0C14"
                        android:textSize="@dimen/s_dp_13" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="练习生成时间："
                    android:textColor="@color/c888B96"
                    android:textSize="@dimen/s_dp_12" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-05-08   13：23：32"
                    android:textColor="@color/c888B96"
                    android:textSize="@dimen/s_dp_12" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shadow_home_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/cFF0000"
                        android:gravity="center"
                        android:text="练习分析"
                        android:textColor="@color/white"
                        android:textSize="@dimen/s_dp_13" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选择题"
                            android:textColor="@color/c161820"
                            android:textSize="@dimen/s_dp_13" />

                        <TextView
                            android:id="@+id/tv_multipleChoice_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05分"
                            android:textColor="@color/cE73B30"
                            android:textSize="@dimen/s_dp_14" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:background="@color/ce9e9e9" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="解答题"
                            android:textColor="@color/c161820"
                            android:textSize="@dimen/s_dp_13" />

                        <TextView
                            android:id="@+id/tv_answerQuestion_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05分"
                            android:textColor="@color/cE73B30"
                            android:textSize="@dimen/s_dp_14" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="您目前练习正确率偏低，建议购买系统的学习知识"
                    android:textColor="@color/c161820"
                    android:textSize="@dimen/s_dp_13" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="| 相关课程推荐"
                android:textColor="@color/c161820"
                android:textSize="@dimen/s_dp_16" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">


        <TextView
            android:id="@+id/tv_back_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="返回列表"
            android:textSize="@dimen/s_dp_16" />

        <TextView
            android:id="@+id/tv_look_error"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c80FF0000"
            android:gravity="center"
            android:text="查看错题"
            android:textColor="@color/white"
            android:textSize="@dimen/s_dp_16" />

        <TextView
            android:id="@+id/tv_parsing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cFF0000"
            android:gravity="center"
            android:text="全部解析"
            android:textColor="@color/white"
            android:textSize="@dimen/s_dp_16" />
    </LinearLayout>


</LinearLayout>