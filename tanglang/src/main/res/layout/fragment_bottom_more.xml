<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BottomMoreFragment">

    <ImageView
        android:id="@+id/chat_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_panorama_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图片"
        app:layout_constraintLeft_toLeftOf="@id/chat_pic"
        app:layout_constraintRight_toRightOf="@id/chat_pic"
        app:layout_constraintTop_toBottomOf="@id/chat_pic" />
</androidx.constraintlayout.widget.ConstraintLayout>